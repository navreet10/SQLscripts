SELECT a.Number_Of_Customers,
  b.NUMBER_OF_States,
  c.Number_of_Companies
FROM
  (SELECT COUNT( DISTINCT customerid) AS Number_Of_Customers FROM customers
  ) a,
  (SELECT COUNT (DISTINCT stateid) AS NUMBER_OF_States FROM customers
  ) b,
  (SELECT COUNT (DISTINCT companyid) AS Number_of_Companies FROM customers
  ) c ; 
  
  select a.firstname from customers a inner join companies b on a.customerid= b.companyid where a.customerid =1;
  
  
  select coalesce ((select companyid from Companies where company = 'Trak Auto'),-1) as ID from dual;
